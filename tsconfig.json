{
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"strict": true,
		"noImplicitAny": true,
		"declaration": false,
		"skipLibCheck": true,
		"strictNullChecks": true,
		"resolveJsonModule": true,
		"outDir": "dist",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
