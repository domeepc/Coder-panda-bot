{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": false,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"include": ["*.ts", "*.js"],
		"indentWidth": 4
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
